        header 
            h1 #{pageTitle} | KooTube
            nav 
                ul 
                    li 
                        a(href="/") Home 
                    if loggedIn
                        li 
                            a(href="/videos/upload") Upload
                        li 
                            a(href="/users/logout") Log out
                    else
                        li 
                            a(href="/login") Log in
                        li 
                            a(href="/users/join") Join
        main 
            block content 
    include ../partials/footer
